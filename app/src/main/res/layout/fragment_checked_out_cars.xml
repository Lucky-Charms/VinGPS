<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/purple_200"
    tools:context=".fragments.CarSearchFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/checkedOutCarFragmentMake"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center|center_horizontal"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintEnd_toStartOf="@+id/checkedOutCarFragmentStatus"
        app:layout_constraintStart_toEndOf="@+id/checkedOutCarFragmentImage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/checkedOutCarFragmentImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:foregroundGravity="center"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/checkedOutCarFragmentStatus"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/checkedOutCarFragmentModel"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/checkedOutCarFragmentStatus"
        app:layout_constraintStart_toEndOf="@+id/checkedOutCarFragmentImage"
        app:layout_constraintTop_toBottomOf="@+id/checkedOutCarFragmentMake" />

</androidx.constraintlayout.widget.ConstraintLayout>