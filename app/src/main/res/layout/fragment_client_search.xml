<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#9C27B0"
    tools:context=".activities.ClientViewFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/clientFragmentFirstName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:ems="10"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/clientFragmentLastName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clientFragmentLastName"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:ems="10"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clientFragmentFirstName"
        app:layout_constraintTop_toTopOf="@+id/clientFragmentFirstName" />

</androidx.constraintlayout.widget.ConstraintLayout>